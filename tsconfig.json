{
    "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es2015",
      "target": "es6",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
    },
    "ts-node": {
        "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
        "files": true,
        "compilerOptions": {
            "noImplicitAny": true,
            "module": "commonjs",
            "allowJs": true,
            "moduleResolution": "node",
            "allowSyntheticDefaultImports": true,
          }
    },
}